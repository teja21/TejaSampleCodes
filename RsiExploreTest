public class RsiExploreTest {

	public static void main(String[] args) throws Exception {
	
		System.setProperty("webdriver.chrome.driver", "C:\\Softwares\\chromedriver.exe");
		WebDriver driver = new ChromeDriver();
		driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
	    driver.navigate().to("http://www.rsystems.com");
	 
    // Handling Objects on the page
			
	 RsiPageObjects  pageObj = new RsiPageObjects(driver);
			
		pageObj.ContactLink.click();
		pageObj.SubmitQueryLink.click();
			
		pageObj.NameTextBox.clear();
		pageObj.NameTextBox.sendKeys("Teja");
			
		pageObj.CompanyTextBox.clear();
		pageObj.CompanyTextBox.sendKeys("FCI");
			
		pageObj.EmailTextBox.clear();
		pageObj.EmailTextBox.sendKeys("tejaj.selenium15@gmail.com");
			
		pageObj.PhoneTextBox.click();
		pageObj.PhoneTextBox.sendKeys("214-499-9811");
			
		pageObj.QueryTextBox.clear();
		pageObj.QueryTextBox.sendKeys("Career options");
			
		Select Choice = new Select(pageObj.SelectDropDownMenu); 
		Choice.selectByVisibleText("Investors");
			
		pageObj.SubmitButton.click();
			
	// Captcha Exception Handling
      
		String expected_alert_msg = driver.switchTo().alert().getText();
        System.out.println("Expected Exception caught: " +expected_alert_msg);
        driver.switchTo().alert().accept();
	
		driver.quit();
			
    }
}
	
